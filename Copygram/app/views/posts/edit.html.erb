<div class="row">
    <div class="col-sm-4">
    </div>
  <div class="col-sm-4">

  <%= form_tag("/posts/#{@p.id}", method: 'patch') do  %>

    <div class="form-group">
      <%= label_tag :title, "Title" %>
      <%= text_field_tag :title, @p.title, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :description, "Description" %>
      <%= text_area_tag :description, @p.description,
                        rows: 5, class: 'form-control' %>
    </div>

    <%= submit_tag "Update", class: 'btn btn-success btn-lg'%>
    or
    <%= link_to "Cancel", "/" %>

  <% end %>

  </div>
    <div class="col-sm-4">
    </div>
</div>