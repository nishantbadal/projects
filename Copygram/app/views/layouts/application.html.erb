<!DOCTYPE html>
<html>
  <head>
    <title>Change This Title</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
      
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
      
  </head>

  <body style="padding-top: 70px;">
    <nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "Copygram", "/", class: "navbar-brand" %>
    </div>
      
    <ul class="nav navbar-nav">
      <% if @userSes == "Hello, guest!"%>
        <li><a><%=@userSes%></a></li>
      <% else %>    
      <li><%= link_to @userSes, "/access/menu" %></li>
      <% end %>
      <li><%= link_to "Sign Up", "/access/signup" %></li>
      <li><%= link_to "Sign In", '/access/login' %></li>
      <li><%= link_to "Sign Out", '/access/logout'%></li>
    </ul>
      
    <div class="navbar-form navbar-left">
    <%= form_tag('/users/', :method => "get", id: "search-form") do %>
    <%= text_field_tag :name, params[:name], placeholder: "Search for user...", class: "form-control" %>
    <%= submit_tag "Search", :name => nil, class: 'btn btn-default btn-md btn-submit' %>
     <% end %>
      </div>
      
      
    <div class="navbar-right">
        
        <%= link_to "Post", new_post_path, class: 'btn btn-default navbar-btn' %>
            
    </div>
      
       
  </div>
</nav>
      
    <%= yield %>
        
  </body>
</html>
