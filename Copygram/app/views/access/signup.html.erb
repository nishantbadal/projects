<h1>Signup</h1>

<div class= "signup">

<%= form_tag(access_signupAttempt_path, :method => :post) do %>
    <table>
        <tr>
            <td><%= label_tag(:name) %></td>
            <td><%= text_field_tag(:name, params[:name]) %></td>
        </tr>
        
        <tr>
            <td><%= label_tag(:email) %></td>
            <td><%= text_field_tag(:email, params[:email]) %></td>
        </tr>
        
        <tr>
            <td><%= label_tag(:password) %></td>
            <td><%= password_field_tag(:password) %></td>
        </tr>
        
        <tr>
            <td><%= submit_tag("Sign Up")%></td>
        </tr>
    
    
    </table>
    
    <% end %>

</div>